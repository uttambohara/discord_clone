// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum MemberRole {
  GUEST
  MODERATOR
  ADMIN
}

enum ChannelType {
  TEXT
  VIDEO
  AUDIO
}

model Profile {
  id       String   @id @default(uuid())
  userId   String
  name     String
  email    String
  imageUrl String   @db.Text
  // relations
  members  Member[]
  servers  Server[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Member {
  id         String     @id @default(uuid())
  userId     String
  memberRole MemberRole @default(GUEST)
  // relations
  profile    Profile?   @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId  String?
  server     Server?    @relation(fields: [serverId], references: [id], onDelete: Cascade)
  serverId   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([serverId])
  @@index([profileId])
}

model Channel {
  id       String      @id @default(uuid())
  name     String
  imageUrl String
  type     ChannelType @default(TEXT)
  // relations
  server   Server?     @relation(fields: [serverId], references: [id], onDelete: Cascade)
  serverId String?

  @@index([serverId])
}

model Server {
  id         String    @id @default(uuid())
  name       String
  inviteCode String
  imageUrl   String    @db.Text
  // relations
  members    Member[]
  channels   Channel[]
  profile    Profile?  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([profileId])
}
